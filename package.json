{
  "name": "espejo-mcp",
  "version": "0.1.0",
  "description": "MCP server for semantic journal search over Day One exports in PostgreSQL + pgvector",
  "type": "module",
  "main": "dist/src/index.js",
  "bin": {
    "espejo-mcp": "dist/src/index.js"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*"
  ],
  "scripts": {
    "check": "pnpm typecheck && pnpm lint && pnpm test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ --max-warnings 0",
    "test": "vitest run",
    "test:unit": "vitest run --project unit",
    "test:integration": "vitest run --project integration",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "build": "tsc",
    "start": "node dist/src/index.js",
    "start:http": "node dist/src/index.js --http",
    "dev": "tsx src/index.ts",
    "dev:db": "docker compose up -d",
    "dev:db:reset": "docker compose down -v && docker compose up -d",
    "dev:db:logs": "docker compose logs -f db",
    "migrate": "tsx scripts/migrate.ts",
    "sync": "tsx scripts/sync-dayone.ts",
    "sync:prod": "NODE_ENV=production tsx scripts/sync-dayone.ts --skip-media",
    "embed": "tsx scripts/embed-entries.ts",
    "embed:prod": "NODE_ENV=production tsx scripts/embed-entries.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.985.0",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "better-sqlite3": "^11.7.0",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "openai": "^4.77.0",
    "pg": "^8.13.1",
    "pgvector": "^0.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.0",
    "@types/node": "^20.17.12",
    "@types/pg": "^8.11.11",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.15.4"
}
